{
    "name": "lb-toolkit-next",
    "description": "Utils for personal use",
    "author": {
        "email": "lori.barto@live.it",
        "name": "Lorenzo Bartolini"
    },
    "main": "./tooling/devbuilds/main.js",
    "submodules": "tooling\\app\\package.json",
    "scripts": {
        "build": "concurrently \"npm run build:main\" \"npm run build:renderer\"",
        "build:main": "cross-env NODE_ENV=production webpack --config ./tooling/configs/webpack.config.main.prod.ts",
        "build:renderer": "cross-env NODE_ENV=production webpack --config ./tooling/configs/webpack.config.renderer.prod.ts",
        "package": "ts-node ./tooling/scripts/clean.ts dist && npm run rebuild && npm run build && ts-node ./tooling/scripts/package.ts",
        "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir tooling/app",
        "start:electron": "cross-env NODE_ENV=development electron .",
        "start:main": "cross-env NODE_ENV=development webpack --config ./tooling/configs/webpack.config.main.dev.ts",
        "start:preload": "cross-env NODE_ENV=development webpack --config ./tooling/configs/webpack.config.preload.dev.ts",
        "start:webpack": "cross-env NODE_ENV=development webpack serve --config ./tooling/configs/webpack.config.renderer.dev.ts"
    },
    "dependencies": {
        "electron-debug": "^3.2.0",
        "electron-log": "^4.4.8",
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@azure/data-tables": "^13.2.0",
        "@mantine/core": "^5.5.5",
        "@pmmmwh/react-refresh-webpack-plugin": "^0.5.7",
        "@svgr/webpack": "^6.3.1",
        "@teamsupercell/typings-for-css-modules-loader": "^2.5.1",
        "@types/node": "18.7.6",
        "@types/react": "^18.0.17",
        "@types/react-dom": "^18.0.6",
        "@types/rimraf": "^3.0.2",
        "@types/terser-webpack-plugin": "^5.0.4",
        "browserslist-config-erb": "^0.0.3",
        "concurrently": "^7.3.0",
        "cross-env": "^7.0.3",
        "css-loader": "^6.7.1",
        "css-minimizer-webpack-plugin": "^4.0.0",
        "electron": "^20.0.2",
        "electron-builder": "^23.3.3",
        "electron-builder-squirrel-windows": "^23.6.0",
        "electron-devtools-installer": "^3.2.0",
        "electron-rebuild": "^3.2.9",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.5.0",
        "mini-css-extract-plugin": "^2.6.1",
        "react-icons": "^4.4.0",
        "react-refresh": "^0.14.0",
        "sass": "^1.54.4",
        "sass-loader": "^13.0.2",
        "style-loader": "^3.3.1",
        "terser-webpack-plugin": "^5.3.5",
        "ts-loader": "^9.4.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4",
        "url-loader": "^4.1.1",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^4.10.0",
        "webpack-merge": "^5.8.0",
        "wifi-qr-code-generator": "^1.1.1"
    }
}